<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SlidingMenu.TextView.ItemTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/list_selector</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:drawablePadding">15.0dip</item>
    </style>

    <style name="SlidingMenu.View.SplitLine" parent="@android:style/Widget">
        <item name="android:background">@drawable/sliding_menu_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SlidingMenu.TextView.Title" parent="@android:style/Widget.TextView">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SlidingMenu.TextView.SubTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/dialog_text_hint</item>
    </style>

</resources>
